{
  "manifest_version": 3,
  "name": "CodeAssist Live Pro",
  "version": "1.0.0",
  "description": "Inline AI-powered code completion, refactoring, explanation, and test generation for web-based editors.",
  "permissions": ["storage", "scripting", "activeTab", "notifications"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": { "service_worker": "background.js", "type": "module" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {"16": "icons/icon16.svg","48":"icons/icon48.svg","128":"icons/icon128.svg"}
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*",
        "*://*.github.dev/*",
        "*://*.vscode.dev/*",
        "*://*.replit.com/*",
        "*://*.codesandbox.io/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {"16":"icons/icon16.svg","48":"icons/icon48.svg","128":"icons/icon128.svg"}
}
